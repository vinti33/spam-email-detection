# spam_classifier.py
# SMS Spam Classification using SVM (TF-IDF + LinearSVC)

import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.svm import LinearSVC
from sklearn.metrics import classification_report, confusion_matrix, accuracy_score

# ------------------------------------------------------------
# 1. Load Dataset
# ------------------------------------------------------------
df = pd.read_csv("spam.csv", encoding="latin-1")

# Drop unused columns
df = df[['v1', 'v2']]
df.columns = ['label', 'message']

# ------------------------------------------------------------
# 2. Preprocessing
# ------------------------------------------------------------
df['label'] = df['label'].map({'ham': 0, 'spam': 1})
X = df['message']
y = df['label']

# Train-test split
X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.20, random_state=42
)

# ------------------------------------------------------------
# 3. TF-IDF Vectorization
# ------------------------------------------------------------
tfidf = TfidfVectorizer(stop_words='english')
X_train_tfidf = tfidf.fit_transform(X_train)
X_test_tfidf = tfidf.transform(X_test)

# ------------------------------------------------------------
# 4. Train SVM Model
# ------------------------------------------------------------
svm_model = LinearSVC()
svm_model.fit(X_train_tfidf, y_train)

# ------------------------------------------------------------
# 5. Evaluation
# ------------------------------------------------------------
y_pred = svm_model.predict(X_test_tfidf)

print("\n--------- Model Evaluation ---------")
print("Accuracy:", accuracy_score(y_test, y_pred))
print("\nClassification Report:\n", classification_report(y_test, y_pred))
print("\nConfusion Matrix:\n", confusion_matrix(y_test, y_pred))

# ------------------------------------------------------------
# 6. Example Prediction
# ------------------------------------------------------------
sample_text = ["Congratulations! You won a free lottery."]
sample_tfidf = tfidf.transform(sample_text)
prediction = svm_model.predict(sample_tfidf)

print("\nSample Prediction:")
print("Input:", sample_text[0])
print("Predicted:", "Spam" if prediction[0] == 1 else "Ham")
